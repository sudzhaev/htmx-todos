<form id="todolist_item_{{ todo.id }}_edit"
      class="todo-list-item"
      data-id="todo_{{ todo.id }}"
      data-component="{{ tmpl_name(self) }}"
      data-returning-component="{{ tmpl_name('list/item.html.j2') }}"
      {% if oob %} hx-swap-oob="innerHTML" {% endif %}
      hx-patch="/todos/{{ todo.id }}"
      hx-swap="outerHTML">
    <input type="text" name="name" value="{{ todo.name }}" autofocus="autofocus"/>
    <input type="submit" value="Update"/>
    <input type="button"
           value="Never mind"
           hx-get="/todolist/item/{{ todo.id }}/edit/close"
           hx-swap="outerHTML"
           hx-target="#todolist_item_{{ todo.id }}_edit"/>
</form>
