<!DOCTYPE html>
<html lang="en">

<head>
    <title>Todos</title>
    <script src="https://unpkg.com/htmx.org@1.9.6"
            integrity="sha384-FhXw7b6AlE/jyjlZH5iHa/tTe9EpJ1Y55RjcgPbjeWMskSxZt1v9qkxLJWNJaGni"
            crossorigin="anonymous">
    </script>
    <script src="https://unpkg.com/hyperscript.org@0.9.11"></script>

    <style>
        * {
            font-size: 18pt;
        }

        body {
            margin-left: 30px;
        }

        .todo-list {
            max-width: 500px;
            display: flex;
            flex-direction: column;
        }

        .todo-list-item {
            display: flex;
            gap: 12px;
            padding: 12px 4px;
            justify-content: space-between;
            text-align: center;
        }

        .todo-list-item.selected {
            background-color: #c4c3c3;
        }

        .todo-list-item.selected:hover {
            background-color: #c4c3c3;
        }

        .todo-list-item + .todo-list-item {
            border-top: solid thin #ccc;
        }

        .todo-list-item:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        .todo-list-item-name {
            flex-grow: 1;
            text-align: start;
        }

        .root {
            display: flex;
        }

        .todo-list-wrapper {
            flex-grow: 1;
        }

        .todo-view {
            border: solid thin black;
            padding: 20px;
            min-width: 250px;
        }
    </style>

    <script type="application/javascript">
        function getDataId(element) {
            let initialElement = element;

            let dataId = element.getAttribute('data-id');
            while (!dataId && element.parentElement) {
                element = element.parentElement
                dataId = element.getAttribute('data-id');
            }
            if (dataId) {
                return [dataId, element]
            } else {
                return [null, initialElement]
            }
        }

        document.addEventListener('htmx:configRequest', (event) => {
            let [dataId, issuerElement] = getDataId(event.target);
            if (!dataId) {
                console.log('data-id attribute not found on issuer element.')
                return;
            }
            let tmplDataHeader = [];
            document.querySelectorAll(`[data-id=${dataId}]`).forEach(node => {
                let issuer = node === issuerElement;
                let tmpl = issuer
                    ? node.getAttribute('data-return-tmpl')
                    : node.getAttribute('data-tmpl');
                tmplDataHeader.push({id: node.id, tmpl: tmpl, issuer: issuer});
            });
            event.detail.headers['X-Tmpl-Data'] = JSON.stringify(tmplDataHeader);
        });
    </script>
</head>

<body hx-boost="true">
<div class="root">
    <div class="todo-list-wrapper">
        <div id="todo-list" class="todo-list">
            {% import 'list/item.html.j2' as list_item %}
            {% for todo in todos %}
                {% set todo_selected = todo.id == current_todo.id if current_todo else False %}
                {{ list_item.render(todo, selected=todo_selected) }}
            {% endfor %}
        </div>

        {% include 'list/new_todo_button.html.j2' %}
    </div>
    <div id="todo-sidebar">
        {% if current_todo %}
            {% import 'todo/todo.html.j2' as todo %}
            {{ todo.render(current_todo) }}
        {% endif %}
    </div>
</div>
</body>

</html>
